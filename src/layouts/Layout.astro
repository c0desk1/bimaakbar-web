---
// src/layouts/Layout.astro
import "../styles/global.css";
import { ClientRouter } from 'astro:transitions';
import Header from '../components/Header.tsx';
import Connect from '../components/Connect.astro';
import StatusIndicator from '../components/StatusIndicator.astro';
import BackToTop from '../components/BackToTop.tsx';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { 
    title, 
    description = 'Website blogging modern dibuat dengan Astro.' 
} = Astro.props;
---

<!doctype html>
<html lang="id">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="src/assets/logo.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <meta name="description" content={description} />
        <ClientRouter />
        <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    </head>
    <body class="antialiased">
        <Header client:idle />
        <main class="container mx-auto px-4 py-8 pt-16">
            <slot />
        </main>
        <Connect />
	    <StatusIndicator />
        <BackToTop client:visible />
        <Footer />
    </body>
</html>