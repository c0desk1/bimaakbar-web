---
import "../styles/global.css";
import BaseHead from '../components/BaseHead.astro';
import { SITE } from "../consts"

const { title, description } = Astro.props;
---
<html lang="id">
    <head>
        <BaseHead title={`${title} | ${SITE.TITLE}`} description={description} />
    </head>
  <body>
    <div class="flex min-h-screen">
      <aside class="w-64 bg-[var(--color-sidebar)] border-r border-[var(--color-border)] hidden sm:block">
        <div class="p-6 font-bold text-xl">Admin Panel</div>
        <nav class="flex flex-col gap-1 px-6">
          <a href="/admin" class="text-sm py-2 hover:text-blue-500">Dashboard</a>
          <a href="/admin/content" class="text-sm py-2 hover:text-blue-500">Konten</a>
          <a href="/admin/cache" class="text-sm py-2 hover:text-blue-500">Cache</a>
        </nav>
      </aside>
      <main class="flex-1"><slot/></main>
    </div>
  </body>
</html>