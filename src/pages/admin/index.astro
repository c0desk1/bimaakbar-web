---
import AdminLayout from "../../layouts/AdminLayout.astro";
---

<AdminLayout>
  <section class="p-6 sm:p-8">
    <h1 class="text-2xl font-semibold mb-4">Dashboard</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="border rounded-xl p-4 bg-[var(--color-bg)]">
        <h2 class="text-lg font-medium mb-2">Status Cache</h2>
        <p class="text-sm text-[var(--color-muted)]">Status cache endpoint seperti <code>/posts</code>, <code>/labels</code>, dsb.</p>
        <a href="/admin/cache" class="inline-block mt-4 text-sm text-blue-500 hover:underline">Lihat Status Cache →</a>
      </div>

      <div class="border rounded-xl p-4 bg-[var(--color-bg)]">
        <h2 class="text-lg font-medium mb-2">Konten</h2>
        <p class="text-sm text-[var(--color-muted)]">Kelola postingan blog, proyek, dan halaman statis.</p>
        <a href="/admin/content" class="inline-block mt-4 text-sm text-blue-500 hover:underline">Kelola Konten →</a>
      </div>
    </div>
  </section>
</AdminLayout>
