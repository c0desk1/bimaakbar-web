---
import { Image } from 'astro:assets';
import { remark } from 'remark';
import html from 'remark-html';

import { formatDate, formatUpdateDate, readingTime } from "../../lib/utils";
import BaseLayout from '../../layouts/BaseLayout.astro';
import Container from '../../components/Container.astro';
import BreadCrumb from '../../components/BreadCrumb.tsx';
import PostNavigation from '../../components/PostNavigation.astro';
import BackToTop from "../../components/ui/BackToTop.tsx";

import type { Post } from '../../types';

export const prerender = false;

const { slug } = Astro.params;
if (!slug) throw new Error('Slug tidak ditemukan');

const res = await fetch(`${import.meta.env.CMS_API_URL}?slug=${slug}`);
if (!res.ok) throw new Error(`Gagal fetch post: ${res.status}`);

const post: Post = await res.json();
if (!post?.slug) return Astro.redirect('/404');

const contentHtml = (await remark().use(html).process(post.content || 'Tidak ada konten')).toString();
---

<BaseLayout
  title={post.metaTitle || post.title}
  description={post.metaDescription || post.description}
  image={post.cover || ""}
>
  <Container size="md">
    <div class="mb-4">
      <BreadCrumb
        items={[
          { label: 'Blog', href: '/blog' },
          {
            label: post.category || 'Tanpa Kategori',
            href: `/blog/category/${encodeURIComponent(post.category || 'unknown')}`
          },
          { label: post.title || 'Tanpa Judul', href: `/blog/${post.slug}` }
        ]}
      />
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <div class="lg:col-span-3">
        <h1 class="text-3xl font-bold text-[var(--color-fg)] leading-tight mb-2">{post.title}</h1>
        <div class="flex flex-wrap gap-3 text-sm text-[var(--color-muted)] mb-4">
          <span>{post.author}</span>
          <span>• {formatDate(post.date)}</span>
          <span>• {readingTime(contentHtml)}</span>
        </div>

        {post.cover && (
          <div class="my-4">
            <Image
              src={post.cover}
              alt={post.title}
              width={960}
              height={480}
              class="rounded-xl shadow-md"
              layout="constrained"
            />
          </div>
        )}
        <article class="prose">
          <div set:html={contentHtml} />
        </article>
        {(post.tags ?? []).length > 0 && (
          <div class="flex flex-wrap gap-2 mt-6">
            {post.tags.map((tag) => (
              <a
                href={`/tag/${encodeURIComponent(tag)}`}
                class="text-xs uppercase border border-[var(--color-border)] bg-[var(--color-bg)] text-[var(--color-muted)] px-2 py-1 rounded-xl hover:bg-[var(--color-hover)]"
              >
                #{tag}
              </a>
            ))}
          </div>
        )}
        <div class="text-xs text-[var(--color-muted)] mt-4">
          {formatUpdateDate(post.lastModified)}
        </div>
      </div>
      <aside class="lg:col-span-1">
        <div class="border border-[var(--color-border)] rounded-xl p-4 bg-[var(--color-bg-secondary)] sticky top-16">
          <h3 class="text-sm font-semibold mb-2 text-[var(--color-fg)]">Tentang artikel ini</h3>
          <p class="text-xs text-[var(--color-muted)] mb-2">Kategori: <strong>{post.category}</strong></p>
          <p class="text-xs text-[var(--color-muted)]">Penulis: <strong>{post.author}</strong></p>
          <div class="flex justify-center mt-4">
            <BackToTop client:visible />
          </div>
        </div>
      </aside>
    </div>
    <PostNavigation currentSlug={post.slug} category={post.category} />
  </Container>
</BaseLayout>
