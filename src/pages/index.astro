---
// src/pages/index.astro
import { HOME } from "../consts"
import Layout from '../layouts/Layout.astro';
import Container from "../components/Container.astro"
import Hero from '../components/Hero.astro';
import RecentPosts from '../components/RecentPosts.astro';
import RecentProjects from '../components/RecentProjects.astro';
import Connect from '../components/Connect.astro';
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
	<Container size="lg">
		<section id="hero" class="py-4">
			<Hero />
		</section>
		<section id="recent-post" class="py-4">
			<RecentPosts />
		</section>
		<section id="recent-projects" class="py-4">
			<RecentProjects />
		</section>
		<section id="connect" class="py-4">
			<Connect />
		</section>	
	</Container>
</Layout>