---
// src/components/StatusIndicator.astro
import { SITE } from "../consts"
import Container from "../components/Container.astro"
import Logo from './Logo';
---
<section class="py-5 overflow-hidden whitespace-nowrap border-t border-[var(--color-border)]">
  <Container size="xl">
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
      <div class="flex flex-col items-center sm:items-start">
        <a href="/" class="flex gap-1 w-fit font-semibold items-center text-center text-current hover:text-[var(--color-fg)] transition-colors duration-300 ease-in-out">
          <Logo width={32} height={32} />
          <span>{SITE.TITLE}</span>
        </a>
      </div>
      <div class="flex gap-2 justify-center sm:justify-end items-center">
        <span class="relative flex h-3 w-3">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[var(--color-accent)] opacity-50"></span>
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full border border-[var(--color-accent)] opacity-50"></span>
          <span class="relative inline-flex rounded-full h-3 w-3 bg-[var(--color-accent)] opacity-75"></span>
        </span>
        <p class="font-medium text-[var(--color-muted)]">
          All systems normal.
        </p>
      </div>
    </div>
  </Container>
</section>