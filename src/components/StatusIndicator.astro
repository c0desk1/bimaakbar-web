---
// src/components/StatusIndicator.astro
import { SITE } from "../consts"
import Logo from './Logo';
import BackToTop from '../components/BackToTop.tsx';
---
<section class="container mx-auto py-4 border-t border-[var(--color-border)]">
  <div class="flex items-center justify-between font-semibold">
    <div class="flex-1">
      <a href="/" class="flex gap-1 items-center text-center text-current hover:text-[var(--color-fg)]">
        <Logo width={32} height={32} />
        <span class="hidden md:inline">{SITE.TITLE}</span>
      </a>
    </div>
    <div class="flex flex-1 justify-center items-center">
      <BackToTop client:visible />
    </div>
    <div class="flex flex-1 flex-col justify-end items-center mx-auto">
      <div class="flex justify-end items-center gap-4 mx-auto">
        <span class="relative flex h-3 w-3">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[var(--color-accent)] opacity-50"></span>
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full border border-[var(--color-accent)] opacity-50"></span>
          <span class="relative inline-flex rounded-full h-3 w-3 bg-[var(--color-accent)] opacity-75"></span>
        </span>
        <p class="font-medium text-[var(--color-muted)]">
          All systems normal.
        </p>
      </div>
    </div>
  </div>
</section>