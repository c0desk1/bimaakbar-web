---
import PostCard from './PostCard.tsx';
import fetchBlog from '../utils/fetchBlog';

const posts = await fetchBlog();
const recentPosts = posts
  .filter(post => post.status === 'PUBLISH')
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime())
  .slice(0, 4);
---
<div class="group flex flex-row justify-between items-center py-4">
  <h2 class="text-xl font-bold text-[var(--color-fg)] flex-1">Terbaru</h2>
  <a href="/blog" class="flex flex-row items-center text-[var(--color-muted)] hover:text-[var(--color-fg)] hover:bg-[var(--color-hover)] py-2 px-2 rounded-full cursor-pointer">
    <span class="font-semibold text-sm">Semua Postingan</span>
  </a>
</div>
<ul class="grid grid-cols-1 md:grid-cols-2 gap-4 auto-rows-fr">
  {recentPosts.map(post => (
    <li key={post.id}>
      <PostCard />
    </li>
  ))}
</ul>
