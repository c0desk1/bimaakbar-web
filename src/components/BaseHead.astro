---
import { SEO } from 'astro-seo';
import { ClientRouter } from "astro:transitions";
import { SITE } from '../consts';

interface Props {
  title: string
  description: string
  image?: string
}

const { title, description, image = "/open-graph.jpg" } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta name="generator" content={Astro.generator} />
<meta name="color-scheme" content="light dark" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

<!-- Font preload -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin>
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin>

<!-- RSS & Sitemap -->
<link rel="alternate" type="application/rss+xml" title={title} href={`${Astro.site}rss.xml`} />
<link rel="sitemap" href="/sitemap-index.xml" />

<!-- Remix Icon -->
<link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />

<!-- SEO Plugin -->
 <!-- @ts-ignore -->
<SEO
  title={title}
  description={description}
  site_name={SITE.TITLE}
  image={new URL(image, Astro.site).toString()}
  canonicalURL={canonicalURL.toString()}
  twitterCard="summary_large_image"
  twitterSite="@bimaakbarmusic"
  lang="id"
/>

<!-- Transisi dan Dark Mode -->
<ClientRouter />

<script>
  const toggleTheme = () => {
    const html = document.documentElement;
    html.classList.toggle('dark');
    localStorage.setItem('theme', html.classList.contains('dark') ? 'dark' : 'light');
  };

  // Atur tema dark saat halaman dimuat
  const theme = localStorage.getItem('theme');
  if (theme === 'dark') {
    document.documentElement.classList.add('dark');
  }
</script>