---
// src/components/Hero.astro
import { SITE } from "../consts"
---

<section class="container relative w-full h-auto mx-auto py-16 md:py-24">
  <div class="flex items-center justify-center">
    <div class="p-5 text-center">
      <p class="text-lg md:text-xl lg:text-2xl font-semibold opacity-75">
        Halo, ini ...
      </p>
      <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold uppercase text-[var(--color-fg)]">
        {SITE.TITLE}
      </h1>
      <p class="text-sm md:text-base lg:text-lg opacity-75">
        {SITE.DESCRIPTION}
      </p>
      <div class="mt-10 flex flex-col sm:flex-row justify-center gap-4">
        <a href="#recent-post" class="bg-[var(--color-fg)] hover:bg-[var(--color-hover)] border border-[var(--color-border)] hover:border-[var(--color-hover)] text-[var(--color-bg)] hover:text-[var(--color-fg)] font-bold py-3 px-8 rounded-full transition-colors backdrop-blur-sm bg-opacity-90 duration-300 ease-in-out">
          Baca Blog
        </a>
        <a href="#recent-projects" class="bg-[var(--color-card-bg)] border border-[var(--color-border)] hover:bg-[var(--color-bg)] text-[var(--color-fg)] font-bold py-3 px-8 rounded-full transition-colors backdrop-blur-sm bg-opacity-80 duration-300 ease-in-out">
          Lihat Karya
        </a>
      </div>
    </div>
  </div>
</section>
  