---
// src/components/Footer.astro
import { SITE, SOCIALS } from "../consts"

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-[var(--color-border)]">
  <div class="container mx-auto w-auto justify-center py-6 pl-4 pr-1">
    <div class="flex flex-col md:flex-row md:justify-between md:items-center gap-4 text-sm text-[var(--color-muted)]">
      <div class="flex gap-2 justify-center md:justify-start">
        <a href="/terms" class="hover:text-[var(--color-fg)]">Ketentuan</a>
        <span>/</span>
        <a href="/privacy" class="hover:text-[var(--color-fg)]">Privasi</a>
      </div>
      <div class="flex gap-4 justify-center items-center text-center md:hidden">
        {SOCIALS.map((SOCIAL) => (
          <a
            href={SOCIAL.HREF}
            target="_blank"
            aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}
            class="group inline-flex text-center items-center justify-center w-9 h-9 rounded-full text-[var(--color-muted)] hover:text-[var(--color-fg)] hover:bg-[var(--color-hover)] transition"
          >
            <i class={`text-lg ${SOCIAL.ICON}`}></i>
          </a>
        ))}
      </div>
      <div class="text-center md:text-right">
        &copy; {currentYear} <a href="/" class="hover:text-[var(--color-fg)]">{SITE.TITLE}</a>. All rights reserved.
      </div>
    </div>
  </div>
</footer>

