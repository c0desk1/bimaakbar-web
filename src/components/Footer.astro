---
// src/components/Footer.astro

// Ambil tahun saat ini secara dinamis
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'GitHub', href: 'https://github.com/bima-akbar', icon: 'ri-github-fill' },
  { name: 'LinkedIn', href: '#', icon: 'ri-linkedin-box-fill' },
  { name: 'Instagram', href: 'https://instagram.com/bima-akbar', icon: 'ri-instagram-line' },
  { name: 'YouTube', href: '#', icon: 'ri-youtube-fill' }
]
---
<footer class="border-t border-gray-800">
  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <div class="flex flex-row sm:flex-row justify-between items-center gap-4">
            <p class="text-sm text-gray-400 text-center sm:text-left">
                &copy; {currentYear} Bima Akbar. All rights reserved.
            </p>
            <a href="/terms" class="hover:text-white transition-colors">Syarat & Ketentuan</a>
            <a href="/privacy" class="hover:text-white transition-colors">Kebijakan Privasi</a>
        </div>
      <div class="flex items-center gap-4">
        {socialLinks.map(link => (
          <a href={link.href} target="_blank" rel="noopener noreferrer" aria-label={link.name} class="text-xl text-gray-500 hover:text-white transition-colors">
            <i class:list={[link.icon]}></i>
          </a>  
        ))}
    </div>

    </div>
  </div>
</footer>