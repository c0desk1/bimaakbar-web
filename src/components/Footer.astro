---
// src/components/Footer.astro
import BackToTop from '../components/BackToTop.tsx';
import { SITE, SOCIALS } from "../consts"

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-[var(--color-border)]">
  <div class="container mx-auto px-4 py-8 flex flex-col gap-6">
    <div class="flex justify-between items-center flex-wrap gap-4">
      <div class="flex gap-4">
        <a href="/terms" class="text-sm text-muted hover:text-white transition-colors">Syarat & Ketentuan</a>
        <a href="/privacy" class="text-sm text-muted hover:text-white transition-colors">Kebijakan Privasi</a>
      </div>
      <BackToTop client:visible />
    </div>
    <div class="flex justify-between items-center flex-wrap gap-4">
      <p class="text-sm text-gray-400 text-center sm:text-left">
        &copy; {currentYear} {SITE.TITLE}. All rights reserved.
      </p>
      <div class="flex items-center gap-4">
        {
          SOCIALS.map((SOCIAL) => (
            <a 
              href={SOCIAL.HREF}
              target="_blank" 
              aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}
              class="group text-[var(--color-muted)] size-10 rounded-full p-2 flex items-center justify-center hover:bg-[var(--color-hover)] hover:text-[var(--color-fg)] transition"
            >
              <i class={`text-xl ${SOCIAL.ICON}`}></i>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>