---
// src/components/Connect.astro
import { SITE, SOCIALS } from "../consts"
---
<section class="container mx-auto h-auto py-16 md:py-24">
  <div class="text-left">
    <h2 class="text-xl md:text-xl font-bold text-[var(--color-fg)]">
      Let's Connect
    </h2>
    <p class="mt-4 text-md text-[var(--color-muted)]">
      Reach out to me via email or on social media.
    </p>
    <div class="text-left items-center mt-8 flex flex-wrap justify-start gap-4">
      <a href="mailto:contact@bimaakbar.my.id" class="flex items-center gap-2 bg-[var(--color-fg)] text-[var(--color-bg)] font-semibold py-3 px-6 rounded-lg transition-transform hover:scale-105">
        <i class="ri-mail-line"></i>
        <span>Email Me</span>
      </a>
      {
        SOCIALS.map((SOCIAL) => (
          <a href={SOCIAL.HREF} target="_blank" aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`} class="group text-left text-[var(--color-muted)] size-10 rounded-full p-2 flex items-center justify-center hover:bg-[var(--color-hover)] hover:text-[var(--color-fg)] transition">
            <i class={`text-xl ${SOCIAL.ICON}`}></i>
          </a>
        ))
      }
    </div>

  </div>
</section>